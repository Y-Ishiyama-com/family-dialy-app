{
  "app": "npx ts-node bin/app.ts",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "*.d.ts",
      "node_modules",
      "cdk.out"
    ]
  },
  "context": {
    "environment": "dev",
    "appName": "family-diary-app",
    "dynamodb": {
      "billingMode": "PAY_PER_REQUEST"
    },
    "cognito": {
      "userPoolName": "family-diary-dev"
    },
    "s3": {
      "bucketPrefix": "family-diary-dev",
      "photosBucketPrefix": "family-diary-photos-dev"
    },
    "lambda": {
      "timeout": 30,
      "memorySize": 512
    }
  }
}
